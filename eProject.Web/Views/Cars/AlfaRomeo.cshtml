@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alfa Romeo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Gran Auto Rentals | @ViewBag.Title</title>

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">

    <!-- App css -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/app.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <!-- Navigation Bar-->
    <!-- End Navigation Bar-->
    <!-- ============================================================== -->
    <!-- Start Page Content here -->
    <!-- ============================================================== -->

    <div class="wrapper">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">GRAN Auto Rentals</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Companies", "Cars")">Companies</a></li>
                                <li class="breadcrumb-item active">Alfa Romeo</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Alfa Romeo</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->



            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center card-box ribbon-box">
                        <div class="ribbon-two ribbon-two-danger"><span>Our Fav</span></div>
                        <div class="clearfix"></div>
                        <div class="pt-2 pb-2">
                            <img src="~/Content/images/carsTW/alfa-fata.jpg" class="img-thumbnail">

                            <h4 class="mt-3 font-17"><a class="text-muted">Alfa Romeo</a></h4>
                            <h4> <span> <a class="text-primary">Giulia Quadrifoglio GTAm</a> </span></h4>

                            <p class="font-15 mt-3">
                                The GTAm have 540 PS (397 kW; 533 hp) and weight reduced by 100 kilograms (220 lb) from Quadrifoglio model,
                                giving a power to weigh ratio of 2.82 kg/PS.
                                The GTAm can accelerate from 0 to 100 km/h in 3.6 seconds, with launch control.
                                <div class="text-md-center font-15">
                                    Engine: 2.9L twin-turbocharged V6.
                                </div>
                                <div class="text-md-center font-15">
                                    Transmission: 6-speed manual.
                                </div>
                                <div class="text-md-center font-15">
                                    Weight: 1.374kg.
                                </div>
                                <h4 class="text-md-center text-primary font-15">
                                    Price: 180$ per day
                                </h4>

                            </p>


                            <div class="text-center">
                                <div class="editable-popup">
                                    <a class="btn btn-sm btn-secondary" href="@Url.Action("Booking", "Home")">Book the car</a>
                                </div>
                            </div>


                        </div> <!-- end .padding -->
                    </div> <!-- end card-box-->
                </div> <!-- end col -->


            </div>
            <!-- end row -->
            <!-- Modal -->

        </div> <!-- end container -->
    </div>
    <!-- end wrapper -->
    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->
    <!-- Vendor js -->
    <script src="~/Content/js/vendor.min.js"></script>

    <!-- Modal-Effect -->
    <script src="~/Content/libs/custombox/custombox.min.js"></script>

    <!-- App js -->
    <script src="~/Content/js/app.min.js"></script>

</body>
</html>