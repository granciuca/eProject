@{
    Layout = "~/Views/Shared/_Blank_Layout.cshtml";
    ViewBag.Title = "Login";
}
@using System.Web.Optimization
@model eProject.Web.Models.UserLoginData

<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body p-4">

                        
                        <hr />
                        @Html.ValidationSummary(true)
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "LoginForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <form action="/" id="LoginForm" novalidate>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Credential, new
                                    {
                                        placeholder = "Username or email address",
                                        title = "Please enter your username",
                                        value = "",
                                        name = "username",
                                        id = "username",
                                        @class = "form-control"
                                    })

                                </div>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Password, new
                                    {
                                        @class = "form-control",
                                        type = "password",
                                        title = "Please enter your password.",
                                        placeholder = "Password",
                                        value = "",
                                        name = "password",
                                        id = "password"
                                    })
                                </div>

                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
                                        <label class="custom-control-label" for="checkbox-signin">Remember me</label>
                                    </div>
                                </div>

                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" type="submit"> Log In </button>
                                </div>

                            </form>
                        }


                        
                        <div class="row mt-3">
                            <div class="col-12 text-center">
                                <p>
                                    <a href="#" class="text-muted ml-1">Forgot your password?</a>
                                </p>
                                <p class="text-muted">Don't have an account? <a href="@Url.Action("Index", "Register")" class="text-primary font-weight-medium ml-1">Sign Up</a></p>
                                <p class="text-muted">Go to<a href="@Url.Action("Index", "Home")" class="text-primary font-weight-medium ml-1">Home</a></p>
                            </div> <!-- end col -->
                        </div>
                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->
            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">
        $(function() {
            $("#LoginForm").validate({
                rules: {
                    Username: {
                        required: true
                    },
                    Password: {
                        required: true
                    }
                },
                submitHandler: function(form) {
                    form.submit();
                },
                errorPlacement: function(error, element) {
                    $(element)
                        .closest("form")
                        .find("label[for='" + element.attr("id") + "']")
                        .append(error);
                },
                errorElement: "span"
            });
        });

    </script>
}